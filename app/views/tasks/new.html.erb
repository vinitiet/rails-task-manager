<div class="container">
  <h2>Create a task</h2>
  <%= form_for @task do |f| %>
  <div class="form-group">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title, { class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.label :details, "Details" %>
    <%= f.text_field :details, { class: "form-control"} %>
  </div>

  <%=  f.submit %>

  <% end %>
  <%= link_to "back to tasks", tasks_path %>
</div>


